<h1>Create new section</h1>

<form action="/view/sessions" method="POST">
  <div class="form-group">
    <label for="sectionName">Section Name</label>
    <input
      type="text"
      id="sectionName"
      name="sectionName"
      class="form-control"
      required
    />
  </div>
  <div class="form-group">
    <label for="sectionDescription">Section Description</label>
    <textarea
      id="sectionDescription"
      name="sectionDescription"
      class="form-control"
      required
      placeholder="Enter section description"
      rows="3"
    ></textarea>
  </div>
  <div class="form-group">
    <label for="duration">Duration</label>
    <input
      type="number"
      id="duration"
      name="duration"
      class="form-control"
      required
      placeholder="Duration"
      min="1"
    />
  </div>
  <div class="form-group">
    <label for="isMainTask" class="form-label">Is Main Task</label>
    <input type="checkbox" id="isMainTask" name="isMainTask" />
  </div>
  <div class="form-group">
    <label for="course">Course</label>
    {{#if courses}}
      <select id="course" name="course" class="form-control" required>
        {{#each courses}}
          <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
      </select>
    {{else}}
      <p>No courses available. Please create a course first.</p>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Create Section</button>
</form>

{{#if error}}
  <div class="alert alert-danger mt-3">
    {{error}}
  </div>
{{/if}}